<h2>Регистрация компании</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :company_name, "Название компании" %><br />
    <%= f.text_field :company_name, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :representer, "Представитель компании" %><br />
    <%= f.text_field :representer, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :email, "Электронная почтв" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "Номер телефона" %><br />
    <%= f.text_field :phone_number, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :about, "Краткая информация о компании" %><br />
    <%= f.text_area :about, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтвердите пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрировать компанию" %>
  </div>
<% end %>

<%= render "shared/links" %>
