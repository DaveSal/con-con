<article class="wow fadeInDown" data-wow-delay=".3s" data-wow-duration="500ms">
    <div class="blog-post-image">
        <a href="<%= publication_path(publication.id) %>"><img class="img-responsive" src="<%= image_path 'blog/post-1.jpg'%>" alt="" /></a>
    </div>
    <div class="blog-content">
        <h2 class="blogpost-title">
        <a href="<%= publication_path(publication.id) %>"><%= publication.title %></a>
        </h2>
        <div class="blog-meta">
            <span id="publication-date"><%= publication.created_at %></span>
            <span>автор 
                <%= "#{publication.author.first_name} #{publication.author.last_name}"%>
            </span>
        </div>
        <a href="<%= publication_path(publication.id)%>" class="btn btn-dafault btn-details">Читать подробнее</a>
        <% if !publication.sold? && publication.author.id != current_individual.id %>
          <div style="float:right;margin-top:20px"><%= render 'shared/payment_form', { publication: publication } %></div>
        <% end %>
    </div>
</article>
