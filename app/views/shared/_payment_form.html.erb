<%= form_tag payments_path(publication: publication.id) do %>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>"
          data-amount="<%= publication.price_in_cents %>"
          data-name="<%= publication.title %>"
          data-description="<%= "#{publication.author.first_name} #{publication.author.last_name}" %>"
          data-locale="auto"
          data-email="<%= current_individual.email %>"
          data-panel-label="Оплатить"
          data-allow-remember-me="false"></script>
<% end %>
