<section id="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="block">
                  <h2 class="subtitle wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".3s">Загрузить публикацию</h2>
                  <div class="contact-form">
                    <%= form_for @publication do |f| %>

                        <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".8s">
                            <%= f.text_field :title, class: 'form-control', placeholder: 'Оглавление', autofocus: true %>
                        </div>

                        <div class="form-group wow fadeInDown fr-view" data-wow-duration="500ms" data-wow-delay=".8s">
                            <%= f.text_area :content, class: 'form-control', placeholder: 'Контент', size: '30x20', autofocus: true %>
                        </div>

                        <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".8s">
                            <%= f.text_field :price, class: 'form-control', placeholder: 'Стоимость', autofocus: true %>
                        </div>           
                        
                        <div id="submit" class="wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.2s">
                            <input type="submit" id="contact-submit" class="btn btn-default btn-send" value="Загрузить публикацию">
                        </div>                      
                        
                      <% end %>
                  </div>
                </div>
            </div>
        </div>
    </div>
</section>
