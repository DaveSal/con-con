<h2>Редактирование личного профиля <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, "Имя" %><br />
    <%= f.text_field :first_name, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Фамилия" %><br />
    <%= f.text_field :last_name, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :major, "Род деятельности" %><br />
    <%= f.text_field :major, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "Номер телефона" %><br />
    <%= f.text_field :phone_number, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :email, "Электронная почтв" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Ждем подтверждения адреса электронной почты for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="field">
    <%= f.label :about, "Краткая информация о компании" %><br />
    <%= f.text_area :about, autofocus: false %>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %> <i>(Оставьте пустым, если не хотите менять пароль)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтвердите пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(введите текущий пароль, чтобы продолжить)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Редактировать профиль" %>
  </div>
<% end %>

<h3>Удалить профиль</h3>

<p>Подтвердите удаление профиля <%= button_to "Удалить безвозвратно", registration_path(resource_name), data: { confirm: "Вы уверены, что точно хотите удалить профиль?" }, method: :delete %></p>

<%= link_to "Back", :back %>
